<script>
import {upload} from '@/core'
export default {
    name: 'bannerUpdate',
    props:["name","detail"],
    components: {
        upload
    },
    watch:{
        'formData.rel.brandId': function(brandId){
            let list1 = this.formData.brandList.list;
            for(let i in list1){
                if(list1[i].brandId == brandId){
                    this.origin = list1[i].origin;
                }
            };
            this.origin = this.origin||"未知产地";

            let list = this.utils.assign(this.$parent.$parent.carTypeGetByBrand);
            for(let i in list){
                if(list[i].brandId == brandId){
                    if(list[i].carsList && list[i].carsList.length>0){
                        this.formData.carsList.list = list[i].carsList;
                    }
                }
            };
            this.carIdStatus = true;
        }
    },
    data () {
        return {
            timeInit:false,
            status:false,
            carIdStatus:false,
            origin:"根据车品牌自动匹配",
            formData:{
                carsList:{
                    listId:"carsId",
                    listName:"carsName",
                    list:[]
                },
                brandList:{
                    listId:"brandId",
                    listName:"brandName",
                    list:[]
                },
                initF:false,
                rel:{
                    deletedYn:"N",
                    carTypeName:"",
                    cardTypeId:"",
                    brandId:"",
                    carsId:"",
                    produceYear:"",
                    gear:"0",
                    emission:"",
                    newEnergy:"N",
                    version:"",
                    oilAmount:0,
                    sparkAmount:1
                }
            }
        }
    },
    mounted () {
        //设置初始时间
        this.handleInit()
    },
    methods: {
        handleInit(){
            let d = this.detail;
            this.formData.brandList.list = JSON.parse(JSON.stringify(this.$parent.$parent.searchData.source.brand.list));
            $Vue.nextTick(()=>{
                let rel = JSON.parse(JSON.stringify(d));
                rel.oilAmount = (rel.oilAmount && Number(rel.oilAmount)) || 0;
                rel.sparkAmount = (rel.sparkAmount && Number(rel.sparkAmount)) || 1;
                this.formData.rel = rel;
                this.formData.rel.produceYear = this.formData.rel.produceYear.toString();
                $Vue.nextTick(()=>{
                    this.status = true;
                    this.timeInit = true;
                });
            });
        },
        getUpList(url){
            this.formData.rel.pictureUrl = url;
        },
        getDate(date){
            this.formData.rel.produceYear = date;
        },
        save(){
            let _this = this;
            this.utils.resolveForm(_this,()=>{
                this.post(Api.car.type.update,this.formData.rel,(res)=>{
                    this.$Message.success("修改汽车品牌成功！");
                    _this.$parent.$parent.getData();
                });
            });
        },
    }
};
</script>
